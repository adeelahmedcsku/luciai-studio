{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Luciai Studio",
    "version": "2.2.0",
    "identifier": "com.luciaistudio.ide",

    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [{
            "title": "Luciai Studio - Cloud-Powered AI-Enabled IDE",
            "width": 1400,
            "height": 800,
            "minWidth": 1200,
            "minHeight": 700,
            "resizable": true,
            "fullscreen": false,
            "decorations": true,
            "transparent": false
        }],
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "$APPDATA/**",
                    "$APPDATA/software-dev-agent-ide/**",
                    "$HOME/.sai-ide/**",
                    "$HOME/projects/**"
                ]
            }
        },
        "trayIcon": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true,
            "menuOnLeftClick": false
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [],
        "copyright": "Copyright (c) 2025 Luciai Studio. All rights reserved.",
        "category": "DeveloperTool",
        "shortDescription": "Cloud-Powered AI-Enabled Professional IDE",
        "longDescription": "Luciai Studio is a cloud-powered AI-enabled professional IDE with 138+ features. Deploy to AWS, GCP, Azure. AI code assistance, monitoring, and full observability.",
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "",
            "wix": null,
            "nsis": null
        }
    },
    "plugins": {}
}